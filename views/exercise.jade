extends layout

block content
	.tabbable.col-lg-9
		ul#tabHandlers.nav.nav-tabs
			li.active
				a(href='#tab1', exercise-toggle='tab') Exercise
			li
				a(href='#tab2', exercise-toggle='tab') Edit
			li
				a(href='#tab3', exercise-toggle='tab') History

		.tab-content
			#tab1.tab-pane.active
				if exercise.flags && exercise.flags.indexOf("unapproved") != -1
					.alert.alert-warning
						strong Unapproved
						| This exercise was not yet verified to be correct
				if exercise.flags && exercise.flags.indexOf("incorrect") != -1
					.alert.alert-error
						strong Attention!
						| There are mistakes in this exercise! Please help to correct them!

				div!= exercise.task

				#hints
				.accordion
					.accordion-group
						.accordion-heading
							a.btn.btn-success.accordion-toggle(
							href='#collapseOne', exercise-toggle='collapse').
								Solution

						#collapseOne.accordion-body.collapse.out
							.accordion-inner
								if exercise.approach
									=exercise.approach

								if exercise.solutions && exercise.solutions.length > 0
									p= exercise.solutions.reduce(function (a, b) {return a + b})

								else if exercise.solution
									.alert.alert-success= exercise.solution
									if exercise.tags.indexOf("proof")
										span.qed(title='Quod Erat Demonstrandum')

			#tab2.tab-pane
				button#exerciseEditSubmit.btn.btn-default(type='submit')
					| Submit
					span
				.successInfo.alert

			#tab3.tab-pane

	#exerciseSidebar.col-lg-3
		- var url = 'educatopia.org/exercises/' + exercise.id
		li.list-group-item
			| URL:
			input.form-control.input-sm(type='url', readonly=true, value=url)

		li.list-group-item
			| Difficulty: <!--space-->
			small.pull-right
				= (exercise.difficulty) ? exercise.difficulty * 10 : 0
				| /10
			.progress
				.progress-bar(style='width:' + (exercise.difficulty * 100) + '%')

		li.list-group-item
			| Credits: <!--space-->
			span.badge.pull-right= exercise.credits

		li.list-group-item
			| Type: <!--space-->
			span.pull-right= exercise.type

		li.list-group-item
			| Subjects: <!--space-->
			each subject in exercise.subjects
				span.label.label-default= subject

		li.list-group-item
			| Tags: <!--space-->
			if exercise.tags
				each tag in exercise.tags
					span.label.label-default= tag

		li.list-group-item
			- var className = '', viewedHints = 0, availableHints = 0

			if exercise.displayedHints && exercise.hints
				- viewedHints = exercise.displayedHints + 1
				- availableHints = exercise.hints.length

				if exercise.displayedHints == exercise.hints.length
					- className = 'disabled'
					- viewedHints = exercise.displayedHints

			button#showHint.btn.btn-info.btn-sm.btn-block(class=className)
				| Show Hint <!--space-->
				= viewedHints
				| /
				= availableHints

		li.list-group-item
			| Note:
			br
			small.text-muted
				= exercise.note

		li.list-group-item
			- var timestamp = String(exercise.id).substr(0, 8)
			- var date = new Date(parseInt(timestamp, 16) * 1000)
			- var time = date.toISOString().substr(0, 19).split('T').join(' ')
			| Created:
			br
			small.text-muted= time
