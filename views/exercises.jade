extends layout

block content
	table#exercisesTable.table.table-striped.table-bordered.table-condensed
		thead
				tr
					th Nr
					th Subject
					th Type
					th Task
					th Difficulty
					th Credits
					th Hints
					th Tags
					th Flags
					th Note
					th Date
					th Time

		//each exercise, index in exercises
			tbody
				tr
					td= index + 1
					td= exercise.subjects
					td= exercise.type
					td: a(href=exercise.url)= exercise.task.substr(0, 30)
					td= exercise.difficulty
					td= exercise.credits
					td= exercise.hints.length
					td= exercise.tags.length
					td= exercise.flags.length
					td= exercise.note.substr(0, 30) + 'â€¦'
					td= exercise.date
					td= exercise.time
