extends ../layout

block content
	.table-responsive
		table#exercisesTable.table.table-striped.table-bordered.table-condensed
			thead
				tr
					th Nr
					th Subject
					th Type
					th Task
					th Difficulty
					th Credits
					th Hints
					th Tags
					th Flags
					th Note

			tbody
				each exercise, index in exercises
					tr
						td= index + 1
						td= exercise.subjects.join(', ')
						td= exercise.type
						td
							- var task = exercise.task
							a(
							href= exercise.url,
							title= task ? task.substr(0, 50) + '…' : ''
							)
								=(task) ? task.substr(0, 30) + '…' : ''
						td= exercise.difficulty
						td= exercise.credits
						td= (exercise.hints) ? exercise.hints.length : ''
						td= (exercise.tags) ? exercise.tags.length : ''
						td= (exercise.flags) ? exercise.flags.length : ''
						td= (exercise.note) ? exercise.note.substr(0, 30) + '…' : ''
