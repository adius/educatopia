nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
	.container-fluid

		a.navbar-brand(href='/') educatopia

		ul.nav.navbar-nav.navbar-left
			li: a(href='/exercises') Exercises
			//li: a(href='/reference') Reference

	if session && session.user
		ul.nav.navbar-nav.navbar-right
			li
				a(href='/' + session.user.username)
					= session.user.username
			li
				a#newExercise(href='/exercises/create')
					span.glyphicon.glyphicon-edit
			li
				a#ogoutButton(href='/logout').
					Logout
	else
		ul.nav.navbar-nav.navbar-right
			li
				a#loginButton(href='/login').
					Login
			li
				a#signupButton(href='/signup').
					Signup
