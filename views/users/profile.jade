extends ../layout

block content
	.row
		.col-md-3
			img(
			src='/img/placeholderProfilePicture.png',
			alt='Profile picture of' + user.username
			)
			h2= user.name
			h3 @#{user.username}
			hr
		.col-md-9
			- var length = exercises.length
			h3= length + ' created exercise' + (length !== 1 ? 's' : '')
			table.table.table-condensed
				tbody
					each exercise, index in exercises
						tr
							td= index + 1
							td
								a(href='/exercises/' + exercise._id)
									= exercise.current.task.substr(0, 120) + 'â€¦'
